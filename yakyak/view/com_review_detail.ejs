<!doctype html>
<html lang="en">
<%- include('head') %> 
<body>
   <!--::header part start::-->
   <%- include('header') %> 
    <!-- Header part end-->

    <link rel="stylesheet" href="./css/board_detail.css">

    <!-- breadcrumb start-->
    <section class="breadcrumb breadcrumb_bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item text-center">
                            <h2>리뷰게시판</h2>
                            <p>Review Bulletin</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb start-->

<!--================ 리뷰게시판 상세보기==================-->
    </br>
    <section class="contact-section">
        <div class="container">
            <form action="#" method='post'>
                <h3 class="title_pill">[<%=list[0].review_yakname %>]　</h3>
                <h3 class="title_text"><%=list[0].review_title %></h3>
                </br>
                </br>
                <h4 class="de_writer"><%=list[0].review_writer %></h4>
                <h6 class="de_comnum">　|　<%=list[0].review_view %></h6>
                <h6 class="de_date"><%=list[0].review_date %></h6>
                </br>
                <div class="de_content">
                    <textarea name="content" id="summernote" class="single-textarea"  placeholder="내용" readOnly><%=list[0].review_content %></textarea>
                </div>
                </br>
                <% if(list[0].review_writer===user){ %>
                <div class="de_button">
                    <a type=submit class="de_btn" onclick="javascript:location.replace('./review_delete?num=<%=list[0].review_no %>');" style="font-size: 100%; float:right; margin-left:1%" >삭제</a>
                    <a type=submit class="de_btn" id="update" onclick="javascript:location.replace('./review_update?num=<%=list[0].review_no %>');" style="font-size: 100%; float:right; " >수정</a>
                </div>
                <% } %>
                </br>
                </br>
            </form>
            <form action="/review_detail" method='post'>
                <div>
                    <h6 class="de_comment">댓글수 <%=list[0].review_comment %></h6>
                    <% if(user!==''){ %>
                        <textarea style="margin-top:1em; height:5em;" class="single-textarea" name="editor" id="editor" rows="10" cols="80" placeholder=" 댓글 0/200"></textarea>
                        <!-- <textarea style="margin-top:0.05em; height:2em;" name="content" id="summernote" class="single-textarea"  placeholder="댓글적는칸"></textarea> -->
                        </br>
                        <input type=submit class="genric-btn info radius" style="color:black; font-size: 100%; float:right; "/>
                    <% } %>
                </div>
            </form>
            <h4 class="mt-3">Comments</h4> <!-- 1 -->

            <div class="mt-3 border-bottom">
                <% for(i = 0; i < comment.length; i++) { %>
                  <div class="border-top pt-1 pb-1">
                      <div class="row">
                        <h4 class="de_comment_writer"><%= comment[i].review_writer %></h4> <!-- 1-3 -->
                        <div class="col-9 col-md-10 col-lg-11">
                            <div class="comment-show">
                                <div class="comment-text mb-3"><h4 class="de_comment_content"><%= comment[i].review_content %></h4><h6 class="de_comment_date"><%= comment[i].review_date%></h6></div> <!-- 1-4 -->
                                <% if(comment[0].review_writer===user){ %>
                                    <div class="de_button">
                                        <a type=submit class="de_btn" onclick="javascript:location.replace('./review_comment_delete?num=<%=list[0].review_no %>&&i=<%= comment[i].review_index %>');" style="font-size:100%; float:right; margin-left:1%" >삭제</a>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        </div>
                  </div>
                <% } %>
            </div>
        </div>
    </section>

    <!--================ 리뷰게시판 상세보기 ==================-->
    <%- include('footer') %> 
</body>
</html>